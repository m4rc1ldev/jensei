# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/jensei-org
# For MongoDB Atlas: mongodb+srv://username:password@jensei-backend.mongodb.net/jensei-org
MONGODB_URI=mongodb://localhost:27017/jensei-org

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (Brevo - formerly Sendinblue)
BREVO_API_KEY=your-brevo-api-key
BREVO_FROM_EMAIL=noreply@jensei.com
BREVO_FROM_NAME=Jensei Healthcare
ENABLE_EMAIL_SERVICE=false

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Doctor Onboarding - Allowed Email Addresses
# Comma-separated list of email addresses allowed to create doctors
# Example: ALLOWED_DOCTOR_ONBOARDING_EMAILS=admin@jensei.com,doctor@jensei.com
ALLOWED_DOCTOR_ONBOARDING_EMAILS=admin@jensei.com

